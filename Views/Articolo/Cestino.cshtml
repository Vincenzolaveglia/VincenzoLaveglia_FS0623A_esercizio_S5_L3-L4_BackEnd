<h2>Risorse Eliminate</h2>

@if (Model.Count == 0)
{
    <h3>Non ci sono articoli nel cestino</h3>
}
else
{
  <div class="row">
        @foreach (var articolo in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="@articolo.ImgCopertina" class="card-img-top" alt="Immagine">
                    <div class="card-body">
                        <h5 class="card-title">@articolo.Nome</h5>
                        <p class="card-text">Prezzo: @articolo.Prezzo€</p>
                    </div>
                    <form style="display: inline" asp-controller="Articolo" asp-action="Recover" method="post">
                        <input type="hidden" name="Id" value="@articolo.Id" />
                        <button type="submit" class="btn btn-primary">Ripristina</button>
                    </form>
                    <form style="display: inline" asp-controller="Articolo" asp-action="Delete" method="post">
                        <input type="hidden" name="Id" value="@articolo.Id" />
                        <button type="submit" class="btn btn-danger">Elimina per sempre</button>
                    </form>
                </div>
            </div>
        }
   </div>
}