<h2>I nostri articoli</h2>

@if (Model.Count == 0)
{
    <h3>Non ci sono articoli</h3>
}
else
{
    <div class="row">
        @foreach (var articolo in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="@articolo.ImgCopertina" class="card-img-top" alt="Immagine">
                    <div class="card-body">
                        <h5 class="card-title">@articolo.Nome</h5>
                        <p class="card-text">Prezzo: @articolo.Prezzo€</p>
                    </div>
                    <div class="card-footer text-center">
                        <a class="btn btn-primary" asp-controller="Articolo" asp-action="Details" asp-route-id="@articolo.Id">Dettagli</a>
                        <a class="btn btn-warning" asp-controller="Articolo" asp-action="Edit" asp-route-id="@articolo.Id">Modifica</a>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modal-@articolo.Id">
                            Delete

                        </button>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="modal-@articolo.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Sei sicuro?</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                            <form asp-controller="Articolo" asp-action="Delete" method="post">
                                <input type="hidden" name="Id" value="@articolo.Id" />
                                <button type="submit" class="btn btn-primary">Si elimina</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


        }
    </div>
}